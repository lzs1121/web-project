mixin review
	.pane-text-wrapper
		h2.section-title
			strong 学员评价
	.rating_review
		h3.review_title Course Review
		.row.review-row
			.col-6.mobile-col
				.reviews
					.average_rating
						.number_rate 5.0
						.row.review-row
							.col-lg-12
								span.stars.fa.fa-star
								span.stars.fa.fa-star
								span.stars.fa.fa-star
								span.stars.fa.fa-star
								span.stars.fa.fa-star
						.review_num= reviews.length + ' rating'
			.col-6.mobile-col
				.detail_rating
					.course_rate
						span.num_star 5 stars 
						.review_bar.progress
							.rating-100.progress-bar.progress-bar-success
						span.percentage 100%
					.course_rate
						span.num_star 4 stars 
						.review_bar.progress
							.rating-0.progress-bar.progress-bar-success
						span.percentage 0%
					.course_rate
						span.num_star 3 stars 
						.review_bar.progress
							.rating-0.progress-bar.progress-bar-success
						span.percentage 0%
					.course_rate
						span.num_star 2 stars 
						.review_bar.progress
							.rating-0.progress-bar.progress-bar-success
						span.percentage 0%
					.course_rate
						span.num_star 1 stars 
						.review_bar.progress
							.rating-0.progress-bar.progress-bar-success
						span.percentage 0%
	
	if reviews.length
		each review in reviews				
			.rating_review.student_review.row.review-row
				.col-6.mobile-col
					.review-avatar
						img.lazyload(data-src=review.avatar.secure_url, alt=review.name)
				.review-content.col-6.mobile-col
					.row.review-row
						strong.student-name= review.name
						.col-lg-6.starset
							span.stars.fa.fa-star
							span.stars.fa.fa-star
							span.stars.fa.fa-star
							span.stars.fa.fa-star
							span.stars.fa.fa-star
						p.review-text= review.content

		
			
