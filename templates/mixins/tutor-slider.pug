mixin tutor-slider
	.swiper-container.tutor-slides
		if teachers.length
			div.swiper-wrapper
				each teacher in teachers
					div.swiper-slide
						.card.jr-instructors__card
							.card-avatar.tutor-card-avartor
								img.lazyload(data-src=(teacher.avatar.secure_url), alt=teacher.name)
							h5= teacher.name
							p.bio= teacher.introduction
							//- a(href="/tutors")="更多信息 >"
		//-.swiper-uni(style="margin-left: -30%;margin-top: 16.5%;")
			.card.jr-instructors__card(style="border-top: 0px;border-radius:1rem;height: 16rem;width: 13rem;")
		div.row.slide-btn
			.swiper-button-prev.tutor-btn-left
				.jr-btn-circle-arrow-left
					img(src="/images/icons/arrow-left.svg" alt="arrow")
			.swiper-button-next.tutor-btn-right
				.jr-btn-circle-arrow-right
					img(src="/images/icons/arrow-right.svg" alt="arrow")
