block content
	section.jr-header
		.jr-header__background--absolute
			img.lazyload.jr-header__background--img(data-src="/images/icons/hero.png" alt="background")
		.contain.jr-course
			.row
				.col-12.col-sm-7.jr-course-header__content
					p.jr-course-header__content--badge 课程无忧 为你保驾护航
					h1 澳洲大学专业课程辅导
					h2.text-left 
						span
							a(href="/city/melbourne") 墨尔本
						span
							a(href="/city/sydney") 悉尼
						span
							a(href="/city/brisbane") 布里斯班
					p 200+学霸老师 保你课程无忧
					p 面向所有澳洲IT/IS/CS专业在校生
					p 课程专人负责 深挖课程考点 难点
					p 定制化辅导 名导师课堂精讲
					div.row
						ul.solo__social
							li
								a(href="https://www.facebook.com/jiangrenquan" target="_blank" title="Facebook")
									img.lazyload(data-src="/images/icons/facebook-white.svg", alt="facebook")
							li
								a(href="https://www.linkedin.com/school/jr-academy" target="_blank" title="Linkedin")
									img.lazyload(data-src="/images/icons/linkedin-white.svg", alt="linkedin")
							li
								a(href="https://www.weibo.com/ozitquan" target="_blank" title="Weibo")
									img.lazyload(data-src="/images/icons/weibo-white.svg", alt="weibo")
							li
								a(href="https://plus.google.com/104735790585354331739" target="_blank" title="Google Plus")
									img.lazyload(data-src="/images/icons/google_plus-white.svg", alt="google plus")
							li
								a(href="/images/xiaohua.jpeg" target="_blank" title="Wechat")
									img.lazyload(data-src="/images/icons/wechat-white.svg", alt="wechat")
		.contain
			.row
				if (universities.length)
					section.jr-university
						.jr-policy-nav
							ul.nav.nav-pills#policy-list(role="tablist")
								li.nav-item
									a.active.nav-link(href="#brisbane" data-toggle="tab" role="tab"  aria-controls="Brisbane" aria-selected="true") Brisbane
								li.nav-item
									a.nav-link(href="#melbourne" data-toggle="tab" role="tab" aria-controls="Melbourne" aria-selected="true") Melbourne
								li.nav-item
									a.nav-link(href="#sydney" data-toggle="tab" role="tab" aria-controls="Sydney" aria-selected="true") Sydney
								li.nav-item
									a.nav-link(href="#adelaide" data-toggle="tab" role="tab" aria-controls="Sydney" aria-selected="true") Adelaide
								li.nav-item
									a.nav-link(href="#canberra" data-toggle="tab" role="tab" aria-controls="Sydney" aria-selected="true") Canberra
						.jr-policy-content.tab-content
							.tab-pane.margin-top-30.active#brisbane
								.row
									each university in universities
										if(university.city.slug == 'brisbane')
											.col-12.col-sm-4.col-md-3
												.card.cursor-click.jr-card__university(onclick=`window.location.href='/university/${university.slug}'`)
													.jr-card__university__body.row
														.col.display-flex.flex-center
															a.flex-1.text-center(href="/university/"+university.slug)
																h4.jr-card__university--title= university.chineseName
													.jr-card__university__background
														.jr-card__university__background--overlay
														img.jr-card__university__background--bg.lazyload(data-src=(university._.cardBackground.fill(272,150)), alt=university.name)
							.tab-pane.margin-top-30#melbourne
								.row
									each university in universities
										if(university.city.slug == 'melbourne')
											.col-12.col-sm-4.col-md-3
												.card.jr-card__university
													.jr-card__university__body.row
														.col.display-flex.flex-center
															a.flex-1.text-center(href="/university/"+university.slug)
																h4.jr-card__university--title= university.chineseName
													.jr-card__university__background
														.jr-card__university__background--overlay
														img.lazyload(data-src=(university._.cardBackground.fill(272,150)), alt=university.name)
							.tab-pane.margin-top-30#sydney
								.row
									each university in universities
										if(university.city.slug == 'sydney')
											.col-12.col-sm-4.col-md-3
												.card.jr-card__university
													.jr-card__university__body.row
														.col.display-flex.flex-center
															a.flex-1.text-center(href="/university/"+university.slug)
																h4.jr-card__university--title= university.chineseName
													.jr-card__university__background
														.jr-card__university__background--overlay
														img.lazyload(data-src=(university._.cardBackground.fill(272,150)), alt=university.name)
							.tab-pane.margin-top-30#adelaide
								.row
									each university in universities
										if(university.city.slug == 'adelaide')
											.col-12.col-sm-4.col-md-3
												.card.jr-card__university
													.jr-card__university__body.row
														.col.display-flex.flex-center
															a.flex-1.text-center(href="/university/"+university.slug)
																h4.jr-card__university--title= university.chineseName
													.jr-card__university__background
														.jr-card__university__background--overlay
														img.lazyload(data-src=(university._.cardBackground.fill(272,150)), alt=university.name)
							.tab-pane.margin-top-30#canberra
								.row
									each university in universities
										if(university.city.slug == 'canberra')
											.col-12.col-sm-4.col-md-3
												.card.jr-card__university
													.jr-card__university__body.row
														.col.display-flex.flex-center
															a.flex-1.text-center(href="/university/"+university.slug)
																h4.jr-card__university--title= university.chineseName
													.jr-card__university__background
