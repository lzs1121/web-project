extends ../layouts/course-layout

//- INCLUDES
include ../mixins/teachers
include ../mixins/tutors
include ../mixins/review
include ../mixins/partnership
include ../mixins/mentor-company
include ../mixins/workshops-list
include ../mixins/meetup-tree
include ../mixins/post-collection
include ../mixins/university/university-city
include ../mixins/breadcrumbs
include ../mixins/course-card-new
include ../mixins/upcoming-event-cards
include ../mixins/program-card

block content
	section
		.contain.jr-course
			.row
				.col-12.col-sm-6.jr-course-header__content
					p.jr-course-header__content--badge 澳洲IT教育最大平台
					h1= city.chName+"匠人圈"
					h3=city.slogan
					p.strong=city.officeAddress
					p IT匠人携手百位业界导师制定了数据AI方向，Web方向，Mobile方向
					p 面向澳洲IT学生，毕业生，转专业
					p 详细基础讲解+商业项目实战，澳洲最强导师团队带你从零基础到就业
					p
						a(href="/city/sydney")  悉尼 
						a(href="/city/melbourne") 墨尔本 
						a(href="/city/brisbane") 布里斯班 
						| 面授远程双向教学
					p 学IT，找匠人，IT匠人助你成就梦想！
					a.jr-btn.jr-btn--md(href="/application") 快速报名
				.col-12.col-sm-6.jr-course-header__image
					img.lazyload(data-src="/images/icons/website.svg" alt="background")
	section
		.contain.jr-course-selection
			.row
				a(href="#trainings")
					.card.jr-course-selection__card
						.card-img-overlay
							img.lazyload(data-src="/images/icons/iconfinder_vector_913_12_3935437.svg" alt="Jiangren")
						.card-text-block
							p 就业培训
				a(href="#career-coaching")
					.card.jr-course-selection__card
						.card-img-overlay
							img.lazyload(data-src="/images/icons/iconfinder_vector_913_20_3935429.svg" alt="Jiangren")
						.card-text-block
							p 职场培训
				a(href="#tutorials")
					.card.jr-course-selection__card
						.card-img-overlay
							img.lazyload(data-src="/images/icons/iconfinder_vector_914_25_3935610.svg" alt="Jiangren")
						.card-text-block
							p 大学辅导
	
	section(id="trainings")
		.contain
			h2.text-center= city.chName+"IT就业培训"
			p.description.text-center= '即将开的'+ city.chName+'培训课程'
			.row.services-wrapper
				if courses.length
					each course in courses
						+course-card-new(course,course.title)
	section
		.contain
			+upcoming-event-cards

	section(id="career-coaching")
		.contain
			h2.section-title 您的澳洲IT就业培训方案
			p.description.text-center 澳洲IT圈 + 技能职业培训 + 商业Projects + 工作内推 + 实习
				.row.services-wrapper.no-margin
					.col-sm-3.col-6
						.row
							.col-sm-12.col-12
								div.service-img-holder
									img.lazyload(data-src='/images/tools/if_031_brainstorm_meeting_crowd_people_group_communicatation_team_2090332.svg' alt="JR Academy inteaction design")
							.col-sm-12.col-12
								h4 课前咨询
								p
									small 决定上课前，与您的课程授课老师一对一咨询，以解答困惑。
					.col-sm-3.col-6
						.row
							.col-sm-12.col-12
								div.service-img-holder
									img.lazyload(data-src='/images/tools/if_022_workspace_workplace_beard_guy_man_laptop_computer_2090123.svg' alt="JR Academy Application Development")
							.col-sm-12.col-12
								h4 课程训练
								p
									small 根据培训方案，完成您的课程培训，迅速提高专业水平。
					.col-sm-3.col-6
						.row
							.col-sm-12.col-12
								div.service-img-holder
									img.lazyload(data-src='/images/tools/if_045_global_planet_jiangren.svg' alt="JR Academy Product Strategy")
							.col-sm-12.col-12
								h4 面试指导
								p
									small 与老师一对一沟通，完成简历修改和模拟面试，获得内部推荐，为面试做好充分准备。
					.col-sm-3.col-6
						.row
							.col-sm-12.col-12
								div.service-img-holder
									img.lazyload(data-src='/images/tools/if_015_news_newspaper_sport_games_prize_achievement_articles_2090158.svg' alt="JR Academy Product Strategy")
							.col-sm-12.col-12
								h4 职前服务
								p
									small 通过面试后，您还可以从IT匠人获得专业的薪酬谈判、职位选择等咨询服务

	section.jr-tutorials-summary
		.contain.jr-tutorials-summary__container
			.row
				.col-12.col-sm-6.jr-tutorials-summary__picture
					img.lazyload(data-src="/images/icons/undraw_interview_rmcf.svg" alt="Tutorial")
				.col-12.col-sm-6
					.jr-course-summary__description
						.row.jr-course-summary__description-detail
							p IT匠人携手澳洲本地各大企业和精英，从学业到就业，竭诚为您提供最体贴的管家式服务。
						.row.jr-course-summary__description-detail
							p 从面试官，雇主角度剖析你的问题
						.row.jr-course-summary__description-detail
							p 面向全专业澳洲留学生，新移民，转专业
						.row.jr-course-summary__description-detail
							p 通过简历修改，职业指导，职业规划，面试辅导，模拟面试等
						.row.jr-course-summary__description-detail
							p 针对个人的个性化定制服务 综合多方面提高学员能力
						.row.jr-course-summary__description-button.white
							a.jr-btn(href="/career-coaching") 了解更多

	section.jr-career
		.contain
			h2.section-title= city.chName+ "职场培训"
			p.description.text-center 职场硬技能，资深导师团队，体系化课程
			.row.services-wrapper
				if careerCoachingList.length
					each career in careerCoachingList
						.col-sm-3.col-12.text-center.jr-card-wrapper
							.card.card-profile.card-plain
								.card-img-top
									a(href='/career-coaching/'+career.slug)
									img.img.lazyload(data-src=(career._.thumbnail.fit(400,300) || "/images/courses/default.png" ), alt= career.name)
	section(id="tutorials")
		.contain
			h2.section-title 大学IT专业课程辅导
			p.description.text-center 提高GPA 拒绝挂科
			+university-city
	+workshops-list(workshops)

	section.jr-overview
		.contain
			h2.section-title 匠人最新文章
			if posts.total
				each post in posts.results
					a(href="/blog/"+post.slug)
						p.text-center= post.title
	
	script(type="application/ld+json").
		{
			"@context": "http://schema.org/",
			"@type": "LocalBusiness",
			"name": "#{city.chName}匠人学院·JR Academy",
			"url": "https://jiangren.com.au/city/#{city.slug}",
			"image": "https://jiangren.com.au/images/logo-sticker-sm.png",
			"description": "#{metaDescription}",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "#{city.officeAddress}",
				"addressLocality": "#{city.name}",
				"addressRegion": "#{city.name}",
				"addressCountry": "Australia"
			}
		}
